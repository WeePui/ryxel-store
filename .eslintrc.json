{
  "extends": [
    "next/babel",
    "next/core-web-vitals",
    "airbnb",
    "prettier",
    "airbnb/hooks"
  ],
  "plugins": ["prettier", "import"],
  "rules": {
    "prettier/prettier": ["error"],
    "import/no-unresolved": "error",
    "no-use-before-define": 0,
    "import/order": [
      2,
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always"
      }
    ],
    "import/newline-after-import": 1
  }
}
